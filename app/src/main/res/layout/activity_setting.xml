<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/setting"
    tools:context="com.example.hesi100.barber.setting">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="vertical"
            android:id="@+id/background">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <include
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/toolbar_setting">
                </include>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:weightSum="1">
                <EditText
                    android:id="@+id/name"
                    android:inputType="text"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="51dp"
                    android:layout_marginTop="18dp"
                    android:layout_weight="0.11"
                    android:background="@drawable/edittext"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="60dp"
                    android:layout_marginTop="20dp"
                    android:text="نام :"
                    android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">
                <EditText
                    android:id="@+id/lastname"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="28dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/edittext"
                    android:paddingLeft="10dp"
                    android:inputType="text"
                    android:paddingRight="10dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:text="نام خانوادگی :"
                    android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">
                <EditText
                    android:layout_width="200dp"
                    android:inputType="phone"
                    android:layout_height="30dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/edittext"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:id="@+id/telefon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:text="شماره تماس :"
                    android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">
                <Spinner
                    android:layout_width="200dp"
                    android:spinnerMode="dialog"
                    android:layout_height="30dp"
                    android:layout_marginRight="42dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/edittext"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:id="@+id/spinnerostan"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="42dp"
                    android:layout_marginTop="20dp"
                    android:text="استان : "
                    android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">


                <Spinner
                    android:layout_width="200dp"
                    android:spinnerMode="dialog"
                    android:layout_height="30dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/edittext"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:id="@+id/spinnershahr"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="20dp"
                    android:text="شهر :"
                    android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">


                <EditText
                    android:layout_width="200dp"
                    android:inputType="text"
                    android:layout_height="30dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edittext"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:id="@+id/username"/>
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="20dp"
                    android:text="نام کاربری :"
                    android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">


                <EditText
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edittext"
                    android:id="@+id/password"
                    android:paddingLeft="10dp"
                    android:inputType="textPassword"
                    android:paddingRight="10dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:text="کلمه عبور قدیم :"
                    android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">


                <EditText
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edittext"
                    android:id="@+id/password_new"
                    android:paddingLeft="10dp"
                    android:inputType="textPassword"
                    android:paddingRight="10dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:text="کلمه عبور جدید:"
                    android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">


                <EditText
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edittext"
                    android:inputType="textPassword"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:id="@+id/passwordrepeat"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="19dp"
                    android:layout_marginTop="20dp"
                    android:text="تکرار کلمه عبور :"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">


                <EditText
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:inputType="textEmailAddress"
                    android:layout_marginRight="45dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edittext"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:id="@+id/email"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="20dp"
                    android:text="ایمیل :"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <Button
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:layout_marginBottom="50dp"
                    android:layout_marginRight="125dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/button"
                    android:onClick="register"
                    android:text="تغییر"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <fragment
        android:id="@+id/nav_drwr_fragment"
        android:name="com.example.hesi100.barber.userfragment"
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        app:layout="@layout/fragment_userfragment"
        tools:layout="@layout/fragment_userfragment" />
</android.support.v4.widget.DrawerLayout>